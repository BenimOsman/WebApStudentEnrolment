@{
    ViewData["Title"] = "Home Page"; 
}

<!-- Custom CSS for the homepage -->
<style>
    body {
        background: #f5f7fa; 
        font-family: 'Segoe UI'; 
    }

    .welcome-container {
        text-align: center;
        margin-top: 6rem; 
    }

    .welcome-container h1 {
        font-weight: 700; 
        color: #343a40; 
        margin-bottom: 1rem; 
    }

    .welcome-container p.lead {
        font-size: 1.25rem; 
        color: #6c757d; 
    }

    /* Custom button styling with hover effect */
    .btn-custom {
        transition: transform 0.2s, box-shadow 0.2s;                    /* Hover animation */
    }

    .btn-custom:hover {
        transform: translateY(-3px);                                    /* Lift button slightly on hover */
        box-shadow: 0 6px 12px rgba(0,0,0,0.15);                      /* Add subtle shadow */
    }

    /* Card styling for informational section */
    .info-card {
        background-color: #ffffff; 
        border-radius: 12px; 
        box-shadow: 0 6px 20px rgba(0,0,0,0.1); 
        margin-top: 4rem; 
        padding: 2rem; 
        max-width: 650px; 
        margin-left: auto; 
        margin-right: auto;
        transition: transform 0.3s; 
    }

    .info-card:hover {
        transform: translateY(-5px); 
        box-shadow: 0 12px 25px rgba(0,0,0,0.15); 
    }

    .btn-group-custom a {
        min-width: 180px;
    }
</style>

<!-- Main container for homepage content -->
<div class="welcome-container">
    <!-- Main welcome header -->
    <h1 class="display-4">Welcome to Student Enrolment System</h1>

    <!-- Lead paragraph with link to ASP.NET Core documentation -->
    <p class="lead">
        Learn about <a href="https://learn.microsoft.com/aspnet/core" target="_blank" rel="noopener noreferrer" class="text-decoration-none">building Web apps with ASP.NET Core</a>.
    </p>

    <!-- Navigation buttons to main modules -->
    <div class="btn-group btn-group-lg btn-group-custom mt-4" role="group">
        <a href="/Student" class="btn btn-primary btn-custom mx-2">View Students</a>            <!-- Navigate to Student page -->
        <a href="/Course" class="btn btn-success btn-custom mx-2">Browse Courses</a>            <!-- Navigate to Courses page -->
        <a href="/Enrolment" class="btn btn-info btn-custom mx-2">Manage Enrolments</a>         <!-- Navigate to Enrolments page -->
    </div>

    <!-- Information card providing context about the system -->
    <div class="info-card mt-5 text-center">
        <h5 class="card-title mb-3">About This System</h5>
        <p class="card-text">
            This application allows managing students, courses, and enrolments efficiently.
            Navigate using the buttons above to get started.
        </p>
    </div>
</div>